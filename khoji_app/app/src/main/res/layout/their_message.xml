<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingEnd="60dp"
    android:paddingStart="15dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/user_avatar"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_avatar"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/message_avatar"
        android:paddingBottom="4dp"
        tools:text="Rose" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message_sender"
        android:layout_below="@+id/message_sender"
        android:background="@drawable/their_message"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textSize="18sp"
        tools:text="How are you doing? This is a long message that should probably wrap." />
</RelativeLayout>